<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Flappy Clone</title>
  <style>body{margin:0;background:#70c5ce}canvas{display:block;margin:0 auto}</style>
</head>
<body>
<canvas id="game" width="400" height="600"></canvas>
<script>
const canvas = document.getElementById('game'), ctx = canvas.getContext('2d');
const W = canvas.width, H = canvas.height;

// Game state
let bird = { x:80, y:300, vy:0, r:14, rot:0 };
const gravity = 0.6, flapImpulse = -9, maxFall = 12;
let pipes = [], pipeTimer = 0, pipeInterval = 90; // frames
const gapSize = 150;
let score = 0, high = 0, running = true;

// Input
window.addEventListener('keydown', e => { if (e.code === 'Space') flap(); if (e.code === 'KeyR') reset(); });
canvas.addEventListener('pointerdown', flap);
function flap(){ if (!running) { reset(); return; } bird.vy = flapImpulse; }

// Pipe creation
function spawnPipe(){
  const pad = 30;
  const topH = pad + Math.random() * (H - gapSize - pad*2);
  pipes.push({ x: W, top: topH, passed:false });
}

// Collision helpers
function rectCircleColliding(cx, cy, r, rx, ry, rw, rh){
  const closestX = Math.max(rx, Math.min(cx, rx+rw));
  const closestY = Math.max(ry, Math.min(cy, ry+rh));
  const dx = cx - closestX, dy = cy - closestY;
  return (dx*dx + dy*dy) < (r*r);
}

function update(){
  if (!running) return;
  // Bird physics
  bird.vy = Math.min(bird.vy + gravity, maxFall);
  bird.y += bird.vy;
  bird.rot = Math.max(-0.5, Math.min(1.2, bird.vy / 15));

  // Pipes
  pipeTimer++;
  if (pipeTimer >= pipeInterval){ spawnPipe(); pipeTimer = 0; }
  for (let i = pipes.length-1; i >= 0; i--){
    const p = pipes[i]; p.x -= 2.6;
    // scoring
    if (!p.passed && p.x + 30 < bird.x){ score++; p.passed = true; high = Math.max(score, high); }
    // offscreen
    if (p.x < -60) pipes.splice(i,1);
    // collision
    const bw = bird.r*1.2, bh = bird.r*1.2;
    if (rectCircleColliding(bird.x, bird.y, bird.r, p.x, 0, 60, p.top) ||
        rectCircleColliding(bird.x, bird.y, bird.r, p.x, p.top + gapSize, 60, H - (p.top + gapSize))){
      running = false;
    }
  }

  // ground/ceiling
  if (bird.y + bird.r > H - 20 || bird.y - bird.r < 0) running = false;
}

function draw(){
  // background
  ctx.fillStyle = '#70c5ce'; ctx.fillRect(0,0,W,H);
  // ground
  ctx.fillStyle = '#de9e5a'; ctx.fillRect(0, H-20, W, 20);
  // pipes
  ctx.fillStyle = '#3bb54a';
  for (const p of pipes){
    ctx.fillRect(p.x, 0, 60, p.top);
    ctx.fillRect(p.x, p.top + gapSize, 60, H - (p.top + gapSize) - 20);
  }
  // bird
  ctx.save();
  ctx.translate(bird.x, bird.y);
  ctx.rotate(bird.rot);
  ctx.fillStyle = '#ffdd57';
  ctx.beginPath(); ctx.ellipse(0,0,bird.r,bird.r*0.85,0,0,Math.PI*2); ctx.fill();
  // eye
  ctx.fillStyle = '#222'; ctx.beginPath(); ctx.arc(6,-4,3,0,Math.PI*2); ctx.fill();
  ctx.restore();

  // score
  ctx.fillStyle = 'white'; ctx.font = '36px sans-serif'; ctx.fillText(score, W/2 - 10, 60);
  if (!running){
    ctx.fillStyle = 'rgba(0,0,0,0.5)'; ctx.fillRect(20, H/2 - 60, W-40, 120);
    ctx.fillStyle = 'white'; ctx.font = '20px sans-serif'; ctx.fillText('Game Over', W/2 - 55, H/2 - 20);
    ctx.fillText('Score: ' + score + '  High: ' + high, W/2 - 85, H/2 + 10);
    ctx.fillText('Click or press Space to restart', W/2 - 150, H/2 + 45);
  }
}

function loop(){
  update();
  draw();
  requestAnimationFrame(loop);
}

function reset(){
  bird = { x:80, y:300, vy:0, r:14, rot:0 };
  pipes = []; pipeTimer = 0; score = 0; running = true;
}

// start
loop();
</script>
</body>
</html>